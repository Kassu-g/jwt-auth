{
  "compilerOptions": {
    "outDir": "./dist",    // Output directory for JavaScript files
    "rootDir": "./src",    // Source directory for TypeScript files
    "target": "ES6",       // JavaScript version to target
    "module": "CommonJS",  // Module system to use
    "strict": true         // Enable strict type checking
  },
  "include": [
    "src/**/*.ts"          // Include all .ts files in src directory
  ],
  "exclude": [
    "node_modules",        // Exclude node_modules
    "dist"                 // Exclude dist to avoid compilation of output files
  ]
}
